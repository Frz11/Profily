
@{
    ViewBag.Title = "Friends";
}
<style>
    h2 {
        color: white;
        text-shadow: 1px 1px 1px black;
    }
</style>
<h2>Friends</h2>
<hr />

@if (ViewBag.Friends.Count == 0)
{
    <div class="row card" style="padding-top:5%;padding-bottom:5%;font-size:1.5em">
        <div class="col-md-12">
            No Friends :(
        </div>
    </div>
}
else
{
    foreach (var Friend in ViewBag.Friends)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="padding:10px">
                <a href="/Profile/Show/@Friend.Id">@Friend.LastName @Friend.FirstName</a>
                <a href="/FriendRequest/RemoveRequest/@Friend.Id"><button class="btn btn-default">Unfriend <i class="glyphicon glyphicon-remove"></i></button></a>
                </div>
            </div>
        </div>
        <br />
    }
}
